{
  "extends": "airbnb",
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    "no-use-before-define": 0,
    "comma-dangle": 0
  },
  "globals": {
    "assert": true,
    "it": true,
    "before": true,
    "beforeEach": true,
    "artifacts": true,
    "contract": true,
    "web3": true
  }
}
